def Soma_pontos(): # este soma os pontos
    with open('Pontuacao.txt', 'r') as documento:
        files = documento.readlines()
        pontuacoes = [int(dado.split(": ")[1]) for dado in files if dado.startswith("Pontos: ")]
        if pontuacoes != 0:
            print(sum(pontuacoes))

def Procura_nome(nome): #este pega o nome
    with open('Pontuacao.txt', 'r') as arquivo:
        file = arquivo.read()
        if file != 0:
            x = file.count(nome)
            print(x)  # ate aqui vai

def juntar(): #juntar os valores de ambas fun√ßoes e somar


nome = input('Entre com um nome:').upper()
print(Soma_pontos())
print(Procura_nome(nome))
