import tkinter as tk
import subprocess
import time
import os

def start_game():
    character_name = entry_name.get()
    message.config(text=f"Bem vindo, {character_name}! O game est√° iniciando...")
    subprocess.run(["python", "DinoGamer.py", character_name])  # Passando o character_name como argumento

window = tk.Tk()
window.title("Character Game")

name_label = tk.Label(window, text="Character Name: ")
name_label.pack()

entry_name = tk.Entry(window)
entry_name.pack()

botao_iniciar = tk.Button(window, text="Start Game", command=start_game)  
botao_iniciar.pack()

message = tk.Label(window, text="")
message.pack()

window.mainloop()
